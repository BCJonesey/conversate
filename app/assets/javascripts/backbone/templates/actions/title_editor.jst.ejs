<a href='#' class='ui-back-button btn-icon'>
  <i class='fa fa-chevron-left'></i>
</a>

<span class="act-title-input"><%= conversation ? conversation.escape('title') : '' %></span>

<div class="btn-group act-title-actions">
  <a href="#" class="btn-icon btn-faint act-move-cnv" title="Move Conversation">
    <i class="fa fa-fw fa-folder-open-o"></i>
  </a>

  <span class="act-title-editor-wrap popover-wrap">
    <a class="btn-icon btn-faint act-title-edit act-title-editor-toggle" title="Edit Title"><i class="fa fa-fw fa-chevron-down"></i></a>
    <div class='act-title-editor-popover popover opens-south-west hidden'>
      <div class='popover-header'>Conversation Details<a href='#' class='popover-close'><i class='fa fa-times'></i></a></div>
      <div class='popover-content'>
        <div class='act-convo-actions menu'>
          <div class='menu-title'>Status</div>
          <a href="#" class="menu-item act-pin-cnv" title="Pin Conversation">
            <i class='menu-item-icon fa fa-fw fa-thumb-tack'></i>
            <% if (conversation.get('pinned')) { %>
            Unpin Conversation
            <% } else { %>
            Pin Conversation
            <% } %>
          </a>
          <a href="#" class="menu-item act-archive-cnv" title="Archive Conversation">
            <i class='menu-item-icon fa fa-fw fa-inbox'></i>
            <% if (conversation.get('archived')) { %>
            Unarchive Conversation
            <% } else { %>
            Archive Conversation
            <% } %>
          </a>
        </div>
        <div class='menu-title'>Title</div>
        <div class='act-title-editor-title-details form'>
          <label>Change Title (for everyone)</label>
          <input type='text' class='act-title-input' value="<%= conversation ? conversation.escape('title') : '' %>"/>
          <div class='act-title-editor-save-actions'>
            <a href='#' class='act-title-save btn'>Update Title</a>
          </div>
        </div>
      </div>
    </div>
  </span>
</div>
