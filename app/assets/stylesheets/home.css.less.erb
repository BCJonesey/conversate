@import "mixins.css.less";
@import "variables.css.less";


.home-main{

  background-color: white !important;
  background-image: url('<%= path_to_image('hero-shaded.jpeg') %>');
  background-size: cover;
  //background-position: 0px -200px;
  @media(min-width:@bp-2){
    background-position: center top;
    background-size: 100% auto;
  }

  .modal-window{
    box-shadow:none;
  }

}

.login-form{
    border:@border-2;
    float: right;
    @media(min-width:@bp-1){
      border:@border-1;
      position:relative;
      margin:2rem auto;
      max-width:50rem;
    }
  }

.speakeasy-form-text{
  padding: 0.25rem;
  text-align: center;
  font-size:0.75rem;
  color:#888;
  a{
    .link-blue();
  }
  p{
    margin:0.25rem;
  }
}

.login-reset-link{
  display:inline-block;
  margin-top:0.2rem;
  margin-right:0.5rem;
  font-size:0.75rem;
  float:right;
  color:#CCC;
  text-decoration: none;
  &:hover{
    color:#888;
    text-decoration: none;
  }
}
