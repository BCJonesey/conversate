@import "ui/mixins.less";

@width-1:@bp-2 * 0.8;

.marketing-page-2{
  .outer{
    .inner{
      width:auto;
      margin:0;
      @media(min-width:@width-1){
        width:@width-1;
        margin:0 auto;
      }
    }
  }

  .jumbo.outer{
    background-color: #bba49a;
    background-image: url('<%= path_to_image('hero-shaded.jpeg') %>');
    background-size: cover;
    //background-position: 0px -200px;
    @media(min-width:@width-1){
      background-position: center top;
      background-size: 100% auto;
    }
  }

  .jumbo{
    .title{
      text-align: center;
      color:white;
      font-size: 3rem;
    }
    .sub-title{
      text-align: center;
      color:white;
      font-size:1rem;
    }
    @media(min-width:@bp-1){
      .title{
        font-size: 5rem;
      }
      .sub-title{
        font-size:2rem;
      }
    }
    @media(min-width:@bp-2){
      .title{
        font-size: 7rem;
      }
      .sub-title{
        font-size:3rem;
      }
    }
  }
  .jumbo.inner{
    padding:0 1.0rem 1.0rem;
  }

  .jumbo-signup-box{
    background-color: rgba(0,0,0,0.5);
    border-radius: 0.5rem;
    p{
      color:white;
    }
    @media(min-width:@bp-2){
      width:@bp-2*0.65;
      margin-left:auto;
      margin-right:auto;
    }
  }
  .section{
    &.outer:nth-child(2n-1){
      background-color: #FAFCFF;

    }
    &.outer{
      border-bottom:1px solid #CCC;
    }
    &.inner{
      padding:1.0rem;
    }
    .heading{
      text-align: center;
      color:#888;
      font-size:1.5rem;
      line-height: 1.5;
      padding:0.25rem 0;
      @media(min-width:@bp-1){
        font-size:2.5rem;
        padding:0.5rem;
      }
      .keyword{
        font-weight:bold;
        font-style: italic;
        color:black;
      }
    }
    p{
      font-size:1.0rem;
      line-height: 1.5;
      @media(min-width:@bp-1){
        padding:1.0rem;
        line-height: 2.0;
        font-size:1.25rem;
      }

    }
    .list-leader{
      font-size:1.0rem;
      color:#888;
      font-style: italic;
    }
    ul{
      padding-left:0.75rem;
      @media(min-width:@bp-1){
        padding-left:2.0rem;
      }
      li{
        padding:0.35rem;
        font-size:0.9rem;
        @media(min-width:@bp-1){

          font-size:1.1rem;
        }

      }
    }
  }
}
