<header>
  <div class='nav clearfix'>
    <div class='btn-group pull-left'>
      <a href="<%= marketing_path %>" class='nav-item <%= active_on_path marketing_path %>'>Water Cooler</a>
      <a href="<%= tour_path %>" class='nav-item <%= active_on_path tour_path %>'>How It Works</a>
    </div>

    <div class="btn-group pull-right">
      <a href="#" class="nav-item nav-item-toggle mkt-sign-in-toggle">Sign In</a>
      <div class="login-modal hidden">
        <%= form_tag session_path, :class => '' do %>
          <div class='form modal-content'>
            <%= label_tag :email, 'Email' %>
            <%= email_field_tag :email, params[:email] %>
            <%= label_tag :password, 'Password' %>
            <%= password_field_tag :password, nil %>
          </div>
          <div class='btn-toolbar-below clearfix'>
            <div class='btn-group pull-right'>
              <%= submit_tag 'Sign In', :class => 'btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
