<div id="short-form-compose" class="clearfix">
  <div class='btn-toolbar pull-left'>
    <a id="enable-long-form" class="btn">Long</a>
  </div>
  <%= form_tag write_message_path, :method => 'put' do %>
    <div class="pull-right">
      <%= submit_tag "Send", :id => 'send', :class => 'btn btn-primary' %>
    </div>
    <div class="fill-width">
      <%= text_area_tag :text, "", :class => 'write' %>
    </div>
  <% end %>
</div>

<div id="long-form-compose">
  <div class='window'>
    <%= form_tag write_message_path, :message => 'put' do %>
    <div class='conv-info-title'>[Title Goes Here]</div>
    <div class='section'>
      <%= text_area_tag :text, "", :class =>'write' %>
    </div>
    <div class='btn-toolbar long-form-toolbar'>
      <div class='btn-group pull-right'>
        <%= submit_tag "Send", :class => 'btn btn-primary' %>
      </div>
      <div class='btn-group'>
        <a id="disable-long-form" class="btn"> Short </a>
      </div>
    <% end %>
  </div>
</div>
