<div id="conversation-view">
  <div id="column-navigation">
  <div class='topics'>
        
        <div class='topics-group'>
          <ul class='topics-list'>
            <li class='current'><a>Conversations</a></li>
          </ul>
        </div>

      <div class="list-divider"></div>

    <div class='topics-group collapsed'>
      <div class='topics-title'>Projects</div>
      <ul class='topics-list'>
        <li class='clearfix'>
          <a>Website</a>
        </li>
        <li><a>TPS Reports</a></li>
        </ul>
        <div class='topics-archive'><a>Archived Projects</a></div>
        </div>

      <div class="list-divider"></div>

        <div class='topics-group'>
        <div class='topics-title'>Off Topic</div>
          <ul class='topics-list'>
            <li class=''><a>LOL Cats</a></li>
            <li><a>Office Football League</a></li>
            <li><a>Gross shit from Jimmy</a></li>
            <li><a>An unreasonably long title to test if overflow is working properly</a></li>
          </ul>
          <div class='topics-archive'> <a>Archived Off Topic</a></div>

        </div>

      <div class="list-divider"></div>
        
        <div class='topics-group'>
          <div class='topics-title'>Soccer</div>
          <ul class='topics-list'>
            <li><a>Fantasy</a></li>
            <li class=''><a>European League</a></li>
          </ul>
          <div class='topics-archive'><a>Archived Soccer</a></div>
        </div>
  </div>
  </div>
  <div class="divider-vertical column-v">
  </div>
  <div id="column-list">
    <% @conversations.each do |conversation| %>
      <div class="<%= list_item_classes(conversation, @opened_conversation, current_user) %>">
        <a href="<%= conversation_path conversation.id %>">
          <div class="list-title"><%= conversation.title %></div>
          <div class="list-participants"><%= conversation.participants %></div>
        </a>
      </div>
      <div class="list-divider"></div>
    <% end %>
  </div>
  <div class="divider-vertical column-v">
  </div>
  <div id="column-conversation">
    <% if @opened_conversation %>
      <div class="title">
        <span class="text"><%= @opened_conversation.title %></span>
        <%= form_tag retitle_conversation_path, :method => 'put' do %>
          <%= text_field_tag :title, @opened_conversation.title %>
          <%= submit_tag "Retitle" %>
        <% end %>
      </div>
      <div id="thread">
        <% @opened_conversation.pieces.each do |piece| %>
          <% if piece.type == :message %>
            <div class="conversation-piece message btn-faint-container">
            <div class="message-info clearfix">
                <div class="pull-right">
                <span class='time'>11:11am</span>
                <div class="btn-group btn-group-dropdown">
                <a href='#' class="btn btn-faint dropdown-toggle">&#9660;</a>
                <div class="dropdown-menu dropdown-menu-left hidden">
                  <span class="menu-title">Edit Message</span>
                  <ul> 
                    <li><a href="#">Move to...</a> </li> 
                    <li><a href="#">Send to Sidebar</a> </li>
                    <li><a href="#">Delete</a> </li>
                    </ul>
                    </div>
              </div>
                </div>
               <div class="sender"><%= piece.user.name %></div>
            </div>
              <span class="message-text"><%= piece.text %></span>
<!--
              <div class="message-actions">
                <%= form_tag delete_message_path(@opened_conversation.id),
                             :method => 'put',
                             :id => "form-delete-#{piece.message_id}" do %>
                  <%= hidden_field_tag :message, piece.message_id %>
                  <%= submit_tag "Delete", :class => 'pull-right btn' %>
                <% end %>
              </div>
-->
            </div>
          <% elsif piece.type == :retitle %>
            <div class="conversation-piece retitle">
              <%= piece.user.name %> titled the conversation "<%= piece.title %>"
            </div>
          <% elsif piece.type == :deletion %>
            <div class="conversation-piece deletion">
              <%= piece.user.name %> deleted a message
            </div>
          <% end %>
        <% end %>
      </div>
      <div id="compose" class="clearfix">
        <%= form_tag write_message_path, :method => 'put' do %>
          <div class="pull-right">
            <%= submit_tag "Send", :id => 'send', :class => 'btn btn-primary' %>
          </div>
          <div class="fill-width">
              <%= text_area_tag :text %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
