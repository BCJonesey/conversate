<div id="column-navigation">
  <div class='topics'>
    <% current_user.topics.uniq.each do |topic| %>
      <div class="topic <%= 'current' if topic.in? @opened_conversation.topics %>">
        <a href="<%= topic_path(topic.id) %>">
          <%= topic.name %>
        </a>
      </div>
    <% end %>

    <div class="topic-new">
      <%= form_tag topic_path, :class => 'topic-new-from', :method => 'post' do%>
        <%= text_field_tag :name, 'New Topic', :class => 'topic-new-input',  :autocomplete => 'off'%>
        <%= submit_tag 'Create New Topic', :class =>'hidden  topic-new-submit'%>
      <% end %>
    </div>
  </div>
</div>
