<div id="column-conversation">
  <% if @opened_conversation %>
  <div class='cnv-info'>
    <div class="cnv-info-title btn-faint-container">
      <%= form_tag retitle_conversation_path,
                   :method => 'put' do %>
        <%= text_field_tag :title, @opened_conversation.title, :id => nil, :class => "cnv-info-title-input", :readonly => true %>
        <%= submit_tag 'Retitle', :class => 'hidden' %>
      <% end %>

      <div class="btn-icon-group cnv-info-title-actions">
        <a href='#' class="btn-icon btn-faint"><i class='icon-inbox'></i></a>
        <a href='#' class="btn-icon btn-faint"><i class='icon-folder-close-alt'></i></a>
        <a href='#' class="btn-icon btn-faint"><i class='icon-trash'></i></a>
        <a href='#' class="btn-icon btn-faint cnv-info-title-edit"><i class='icon-cog'></i></a>
      </div>

      <div class="btn-icon-group cnv-info-title-save-actions hidden">
        <a href='#' class="btn-icon btn-faint cnv-info-title-save"><i class='icon-bolt'></i><span class='icon-text'>Save</span></a>
      </div>

    </div>

    <div class='cnv-info-participants btn-faint-container'>
      <%= form_tag update_users_path,
                   :method => 'put',
                   :class => 'participants' do %>
        <%= text_field_tag :users, '', :autocomplete => 'off', :class => "participant-input"%>
        <%= submit_tag 'Change Users', :class => 'hidden' %>
      <% end %>

      <div class="btn-group cnv-info-participants-actions">
        <a href='#' class="btn-icon btn-faint cnv-info-participants-edit"><i class='icon-group'></i></a>
      </div>

      <div class="btn-group cnv-info-participants-save-actions hidden">
        <a href='#' class="btn-icon btn-faint cnv-info-participants-save"><i class='icon-bolt'></i><span class='icon-text'>Save</span></a>
      </div>



    </div>


  </div>

  <div id="thread">
    <% @opened_conversation.pieces.each do |piece| %>
      <%= render_conversation_piece piece %>
    <% end %>
  </div>

    <%= render 'compose_forms' %>
  <% end %>
</div>
</div>
