<div class='page-wrapper'>
  <header>
  <div class='nav clearfix'>
    <div class='btn-group pull-left'>
  <a href="<%= root_path %>" class='nav-item active'>Water Cooler</a>
  <a href="<%= tour_path %>" class='nav-item'>Tour</a>
  <a href="<%= pricing_path %>" class='nav-item'>Pricing</a>
</div>

<div class='btn-group pull-right'>
  <a href="#" class="nav-item nav-item-toggle login-modal-trigger">Sign In</a>
</div>
  <div class="login-modal hidden">
      <%= form_tag session_path, :class => 'form' do %>
        <%= email_field_tag :email, params[:email], placeholder: 'Email' %>
        <%= password_field_tag :password, nil, placeholder: 'Password' %>
        <div class="clearfix">
          <div class="btn-group pull-right">
            <%= submit_tag 'Sign In', :class => 'form-btn form-btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</header>

<div class="main">
  <div class="hero">
