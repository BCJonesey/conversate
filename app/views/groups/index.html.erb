<%= render 'shared/hacky_top_bar' %>

<div class="grp-page">
  <% current_user.groups.each do |group| %>
    <div class="grp">
      <div class='btn-toolbar clearfix'>

        <div class='btn-group pull-left'>
          <span class="grp-name "><%= group.name %></span>
        </div>
        <% if current_user.group_admin?(group) %>
        <div class='btn-group pull-right'>
          <a href="#" class="grp-new-user-trigger btn">New User</a>
        </div>
      <% end %>
    </div>
      <table>
        <thead>
          <tr>
            <td>Name</td>
            <td>Email Address</td>
            <td>Admin</td>
            <% if current_user.group_admin?(group) %>
              <td>Remove</td>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% group.users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td>
                <%= check_box_tag :admin, 'admin', user.group_admin?(group),
                                  disabled: !current_user.group_admin?(group) %>
              </td>
              <% if current_user.group_admin?(group) %>
                <td>
                  <a href="#" class="grp-remove-user-trigger">Remove</a>
                  <i class="icon-remove hidden grp-unremove-user-trigger"></i>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if current_user.group_admin?(group) %>
      <div class='btn-toolbar-below grb-bar clearfix'>
        <div class='btn-group pull-right'>
          <%= submit_tag 'Save', class: 'btn-primary' %>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
